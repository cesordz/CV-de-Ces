.diploma-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 1.2em;
  margin-top: 1em;
}
.diploma-item {
  background: #f4f6fa;
  border-radius: 10px;
  .container h1 {
    text-align: left;
    font-size: 3.2rem;
    font-weight: 700;
    margin-bottom: 0.2em;
    color: #2d3a4a;
    letter-spacing: 1.5px;
    position: relative;
  }
  .container h1::after {
    content: '';
    display: block;
    width: 90px;
    height: 5px;
    background: linear-gradient(90deg, #646cff 40%, #4b52c7 100%);
    border-radius: 2px;
    margin-top: 14px;
  }
  .container h2 {
    text-align: left;
    font-size: 1.7rem;
    font-weight: 400;
    margin-top: 0;
    margin-bottom: 2em;
    color: #4b52c7;
  }
  box-shadow: 0 2px 8px rgba(100,108,255,0.08);
  padding: 1em;
  text-align: center;
  transition: box-shadow 0.2s, background 0.2s, transform 0.2s;
}
.diploma-item:hover {
  background: #e0e7ff;
  box-shadow: 0 4px 16px rgba(100,108,255,0.18);
  transform: translateY(-4px) scale(1.03);
}
