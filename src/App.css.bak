}

.cv-section {
  margin-bottom: 2em;
  padding-bottom: 1em;
  border-bottom: 1px solid #e0e7ff;
}
.cv-section:last-child {
  border-bottom: none;
}
.cv-section h3 {
  font-size: 1.1rem;
  color: #646cff;
  margin-bottom: 0.5em;
  margin-top: 0;
  letter-spacing: 0.5px;
  background: none;
  font-weight: 700;
}
.cv-section ul {
  padding-left: 1.2em;
  margin: 0.5em 0 0 0;
}
.cv-section li {
  margin-bottom: 0.7em;
  line-height: 1.6;
}
.cv-section p {
  margin: 0.3em 0 0.7em 0;
}

@media (max-width: 600px) {
  #root {
    max-width: 100%;
    margin: 0;
    padding: 0;
  }
  .container {
    padding: 1.2rem 0.5rem;
    border-radius: 0;
    box-shadow: none;
  }
}

.logo {
  height: 6em;
  padding: 1.5em;
  will-change: filter;
  transition: filter 300ms;
}
.logo:hover {
  filter: drop-shadow(0 0 2em #646cffaa);
}
.logo.react:hover {
  filter: drop-shadow(0 0 2em #61dafbaa);
}

@keyframes logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@media (prefers-reduced-motion: no-preference) {
  a:nth-of-type(2) .logo {
    animation: logo-spin infinite 20s linear;
  }
}

.card {
  padding: 2em;
}

.read-the-docs {
  color: #888;
