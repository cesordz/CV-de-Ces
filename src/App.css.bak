  padding: 0;
}


.container {
  background: rgba(255,255,255,0.95);
  border-radius: 18px;
  box-shadow: 0 8px 32px rgba(100,108,255,0.18), 0 2px 8px rgba(0,0,0,0.08);
  padding: 2.5rem 3rem;
  position: relative;
  overflow: hidden;
}

.container h1 {
.container h1 {
  text-align: left;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 0.2em;
  color: #2d3a4a;
  letter-spacing: 1px;
  position: relative;
}
.container h1::after {
  content: '';
  display: block;
  width: 60px;
  height: 4px;
  background: linear-gradient(90deg, #646cff 40%, #4b52c7 100%);
  border-radius: 2px;
  margin-top: 10px;
}
}
.container h2 {
  text-align: left;
  font-size: 1.3rem;
  font-weight: 400;
  margin-top: 0;
  margin-bottom: 1.5em;
